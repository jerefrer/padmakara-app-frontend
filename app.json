{
  "expo": {
    "name": "padmakara-app-claude-code",
    "slug": "padmakara-app-claude-code",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "padmakaraappclaudecode",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "linking": {
      "prefixes": [
        "padmakaraappclaudecode://",
        "https://padmakara.app",
        "http://localhost:3000"
      ],
      "config": {
        "screens": {
          "(auth)": {
            "screens": {
              "activate": {
                "screens": {
                  "[token]": "activate/:token"
                }
              },
              "magic-link": "magic-link",
              "check-email": "check-email"
            }
          },
          "(tabs)": {
            "screens": {
              "index": "",
              "profile": "profile"
            }
          }
        }
      }
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
